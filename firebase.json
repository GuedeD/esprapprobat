{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "redirects": [
      {
        "source": "/",
        "destination": "https://www.approbat.com",
        "type": 301,
        "condition": {
          "hostname": "approbat-a5393.web.app"
        }
      },
      {
        "source": "/(.*)",
        "destination": "https://www.approbat.com",
        "type": 301,
        "condition": {
          "hostname": "approbat-a5393.firebaseapp.com"
        }
      }
    ]
  }
}
